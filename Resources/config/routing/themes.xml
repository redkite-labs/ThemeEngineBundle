<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--Overrides the valum's upload routing to work with _locale -->
    <route id="_themes_upload_file" pattern="/{_locale}/al_uploadFile">
        <default key="_controller">AlValumUploaderBundle:ValumUploader:upload</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_themes" pattern="/{_locale}/al_showThemes">
        <default key="_controller">AlphaLemonThemeEngineBundle:Themes:show</default>
        <default key="_locale">en</default>
    </route>

    <route id="_import_theme" pattern="/{_locale}/al_importTheme">
        <default key="_controller">AlphaLemonThemeEngineBundle:Themes:importTheme</default>
        <default key="_locale">en</default>
    </route>

    <route id="_activate_theme" pattern="/{_locale}/al_activateTheme/{themeName}}">
        <default key="_controller">AlphaLemonThemeEngineBundle:Themes:activateTheme</default>
        <default key="_locale">en</default>
        <!--<requirement key="_method">POST</requirement>-->
    </route>

    <route id="_extract_themes" pattern="/{_locale}/al_extractTheme"> 
        <default key="_controller">AlphaLemonThemeEngineBundle:Themes:extractThemes</default>
        <default key="_locale">en</default>
        <!--<requirement key="_method">POST</requirement>-->
    </route>

    <route id="_remove_theme" pattern="/{_locale}/al_removeTheme">
        <default key="_controller">AlphaLemonThemeEngineBundle:Themes:removeTheme</default>
        <default key="_locale">en</default>
    </route>
    
    <route id="_install_assets" pattern="/al_installAssets">
        <default key="_controller">AlphaLemonThemeEngineBundle:Themes:installAssets</default>
    </route>

</routes>
