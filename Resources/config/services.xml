<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="red_kite_labs_theme_engine.base_template">RedKiteLabsThemeEngineBundle:Theme:base.html.twig</parameter>
        <parameter key="red_kite_labs_theme_engine.active_theme_file">%kernel.root_dir%/Resources/.active_theme</parameter>
        <parameter key="red_kite_labs_theme_engine.deploy.templates_folder">RedKiteCms</parameter>
        <parameter key="red_kite_labs_theme_engine.deploy.stage_templates_folder">RedKiteCmsStage</parameter>
        <parameter key="red_kite_labs_theme_engine.info_valid_entries" type="collection">
            <parameter>title</parameter>
            <parameter>description</parameter>
            <parameter>author</parameter>
            <parameter>license</parameter>
            <parameter>website</parameter>
            <parameter>email</parameter>
            <parameter>version</parameter>
        </parameter>

        <parameter key="red_kite_labs_theme_engine.active_theme.class">RedKiteLabs\ThemeEngineBundle\Core\Theme\AlActiveTheme</parameter>
        <parameter key="red_kite_labs_theme_engine.themes.class">RedKiteLabs\ThemeEngineBundle\Core\ThemesCollection\AlThemesCollection</parameter>
        <parameter key="red_kite_labs_theme_engine.theme.class">RedKiteLabs\ThemeEngineBundle\Core\Theme\AlTheme</parameter>
        <parameter key="red_kite_labs_theme_engine.slot.class">RedKiteLabs\ThemeEngineBundle\Core\TemplateSlots\AlSlot</parameter>
        <parameter key="red_kite_labs_theme_engine.template.class">RedKiteLabs\ThemeEngineBundle\Core\Template\AlTemplate</parameter>
        <parameter key="red_kite_labs_theme_engine.template_assets.class">RedKiteLabs\ThemeEngineBundle\Core\Template\AlTemplateAssets</parameter>
        <parameter key="red_kite_labs_theme_engine.template_slots.class">RedKiteLabs\ThemeEngineBundle\Core\TemplateSlots\AlTemplateSlots</parameter>
        <parameter key="red_kite_labs_theme_engine.registed_listeners.class">RedKiteLabs\ThemeEngineBundle\Core\Rendering\Compiler\ThemeEngineListenersCollection\AlThemeEngineListenersCollection</parameter>        
    </parameters>

    <services>
        <service id="red_kite_labs_theme_engine.registed_listeners" class="%red_kite_labs_theme_engine.registed_listeners.class%">
        </service>
        
        <service id="red_kite_labs_theme_engine.themes" class="%red_kite_labs_theme_engine.themes.class%">
        </service>

        <service id="red_kite_labs_theme_engine.active_theme" class="%red_kite_labs_theme_engine.active_theme.class%">
            <argument type="service" id="service_container"></argument>
        </service>
    </services>
</container>
